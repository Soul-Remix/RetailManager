@if (IsLoading)
{
    <div class="w-100 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}

@code {

    [Parameter]
    public bool IsLoading { get; set; }

}